case "$1" in
    start)
        screen -AmdS zmoddet ./BeamMP-Server-linux
        sleep 0.5
        echo The server zmoddet was started
    ;;
    stop)
        screen -r zmoddet -X quit
        sleep 0.5
        echo The server zmoddet was stopped
    ;;
    restart)
        screen -r v zmoddet -X quit
        sleep 0.5
        echo The server zmoddet is restarted
        screen -AmdS zmoddet ./BeamMP-Server-linux
    ;;
    help)

    ;;
    *)
        echo "Invalid usage: ${0} {start|stop|restart}"
esac
